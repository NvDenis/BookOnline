<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 390px;">
        <h3 class="text-center mb-4">Đăng nhập Quản trịp</h3>
        <form method="post">
            <div class="form-group mb-3">
                <label class="mb-1">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Nhập email..." />
            </div>
            <div class="form-group mb-3">
                <label class="mb-1">Mật khẩu</label>
                <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu..." />
            </div>
            <button type="submit" class="btn btn-primary w-100" style="background-color: #212529">Đăng nhập</button>
        </form>
        @if (ViewBag.Error != null)
        {
            <p style="color:red">@ViewBag.Error</p>
        }
    </div>
</div>
