@model bookstore.Models.Book
@using System.Text.Json
@if (Model == null)
{
    <div class="alert alert-warning text-center my-5">
        Không tìm thấy thông tin sách.
    </div>
}
else
{
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                @{
                    var imgList = JsonSerializer.Deserialize<List<string>>(@Model.imgs ?? "[]");
                    var firstImg = imgList.FirstOrDefault() ?? "/img/default.jpg"; // đường dẫn ảnh fallback nếu null
                }
                <img src="@firstImg" alt="@Model.name" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: contain;" />
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold mb-3">@Model.name</h2>
                <p class="mb-4">@Model.description</p>
                <div class="mb-4">
                    <span class="fw-bold fs-4 text-danger">@Model.price.ToString("N0") ₫</span>
                </div>
                <a class="btn text-white" href="/cart/addtocart/@Model._id" style="background-color: #212529">Thêm vào giỏ</a>
            </div>
        </div>
    </div>
}