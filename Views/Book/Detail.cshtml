@model bookstore.Models.Book

@if (Model == null)
{
    <div class="alert alert-warning text-center my-5">
        Không tìm thấy thông tin sách.
    </div>
}
else
{
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <img src="@Model.img" alt="@Model.name" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: contain;" />
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold mb-3">@Model.name</h2>
                <p class="mb-4">@Model.description</p>
                <div class="mb-4">
                    <span class="fw-bold fs-4 text-danger">@Model.price.ToString("N0") ₫</span>
                </div>
                <a class="btn btn-primary" href="/cart/addtocart/@Model._id">Thêm vào giỏ</a>
            </div>
        </div>
    </div>
}