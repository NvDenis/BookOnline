@model bookstore.Models.Publisher
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa sách";
}

<h2>Chỉnh sửa sách</h2>

<form asp-action="Edit" asp-route-id="@Model._id" method="post" asp-antiforgery="true">
    <!-- Đảm bảo có AntiForgeryToken -->
    @Html.AntiForgeryToken()
    <!-- ✅ PHẢI có dòng này để truyền lại _id khi POST -->
    <input type="hidden" asp-for="_id"  />

    <div class="mb-3">
        <label class="form-label">Tên sách</label>
        <input asp-for="name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="/admin/publisher" class="btn btn-secondary">Quay lại</a>
</form>
