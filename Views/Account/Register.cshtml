<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 390px;">
        <h3 class="text-center mb-4">Đăng ký</h3>
        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label class="mb-1">Họ và tên</label>
                <input asp-for="Username" class="form-control" placeholder="Nhập họ và tên..." />
            </div>
            <div class="form-group mb-3">
                <label class="mb-1">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
            </div>
            <div class="form-group mb-3">
                <label class="mb-1">Địa chỉ</label>
                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ..." />
            </div>
            <div class="form-group mb-3">
                <label class="mb-1">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
            </div>
            <div class="form-group mb-3">
                <label class="mb-1">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
            </div>
            <button type="submit" class="btn btn-primary w-100" style="background-color: #212529">Đăng ký</button>
        </form>
        <div class="mt-3 text-center">
            Bạn đã có tài khoản? <a href="/dang-nhap">Đăng nhập</a>
        </div>
    </div>
</div>