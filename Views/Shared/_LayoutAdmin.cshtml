@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 200px;
            background-color: #d3d6db;
            padding-top: 20px;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 12px 20px;
                text-decoration: none;
                color: #000;
                font-weight: 500;
                transition: background 0.2s ease;
            }

                .sidebar a:hover {
                    background-color: #c0c3c7;
                }

                .sidebar a i {
                    margin-right: 12px;
                    font-size: 16px;
                }

                .sidebar a.active {
                    font-weight: bold;
                }

        .main-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .header {
            height: 60px;
            background-color: #343a40;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 0 20px;
            flex-shrink: 0;
        }

        .main-content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a class="active" href="/Admin"><i class="fa-solid fa-house"></i> Tổng quan</a>
        <a href="/admin/book"><i class="fa-solid fa-box"></i> Sách</a>
        <a href="/admin/topic"><i class="fa-solid fa-layer-group"></i> Chủ đề</a>
        <a href="/admin/publisher"><i class="fa-solid fa-layer-group"></i> Nhà xuất bản</a>
        <a href="/admin/user"><i class="fa-solid fa-user"></i> Người dùng</a>
    </div>

    <!-- Main content -->
    <div class="main-wrapper">
        <header class="header">
            @{
                var userName = HttpContextAccessor.HttpContext.Session.GetString("user_name");
                var userEmail = HttpContextAccessor.HttpContext.Session.GetString("user_email");
            }

            @if (!string.IsNullOrEmpty(userEmail))
            {
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Xin chào, <strong>@userName</strong>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/">Trang chủ</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item">Đăng xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a href="/Account/Login" class="btn btn-outline-primary">Đăng nhập</a>
            }
        </header>

        <div class="main-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
